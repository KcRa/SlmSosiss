<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/app_bar"
        android:background="@color/color_primary_v2"
        style="@style/app_bar">

        <ImageView
            android:id="@+id/back_to_menupage"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            style="@style/bak_icon" />
        <TextView
            android:text="اِی.پی.آی"
            style="@style/app_bar_title" />
        <ImageView
            android:id="@+id/more_vert"
            android:src="@drawable/ic_more_vert_white_24dp"
            style="@style/more_vert_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bak_push_me"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/app_bar"
        android:background="@color/sausage"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/push_me_to_api"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:text="پوش می"
            android:fontFamily="@font/lalezar_regular"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/color_on_black"
            android:background="@drawable/shape_sosiss_button_on_first_page"
            />

    </RelativeLayout>


    <ListView
        android:id="@+id/list_vu_api"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bak_push_me"
        >

    </ListView>

</RelativeLayout>