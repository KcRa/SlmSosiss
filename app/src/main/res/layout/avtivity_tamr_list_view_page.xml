<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:background="@color/color_primary"
        style="@style/app_bar">

        <ImageView
            android:id="@+id/back_to_menupage"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            style="@style/bak_icon" />
        <TextView
            android:text="ریسایکل ویو / کارت ویو"
            style="@style/app_bar_title" />
        <ImageView
            android:id="@+id/more_vert"
            android:src="@drawable/ic_more_vert_white_24dp"
            style="@style/more_vert_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_remove"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/app_bar"
        android:background="@color/color_secondary"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/btm_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_circle_outline_black_72dp"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/btm_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_outline_black_72dp"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_remove"
        android:background="@color/color_surface"
        >

    </ListView>


</RelativeLayout>